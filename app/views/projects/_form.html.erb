<%= form_with(model: project, class: "flex flex-col gap-6") do |form| %>
  <div>
    <%= form.label :title, class: "label-default" %>
    <%= form.text_field :title, class: "input-default" %>
  </div>

  <div>
    <%= form.label :description, class: "label-default" %>
    <%= form.text_area :description, rows: 4, class: "input-default" %>
  </div>

  <div>
    <%= form.label :demo_video_url, class: "label-default" %>
    <%= form.text_field :demo_video_url, class: "input-default" %>
  </div>

  <div>
    <%= form.label :demo_image, class: "label-default" %>
    <%= form.file_field :demo_image, class: "input-default" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.label :featured, class: "label-default mb-0" %>
    <%= form.check_box :featured, class: "h-5 w-5 border-gray-300 rounded" %>
  </div>

  <div>
    <%= form.label :role, class: "label-default" %>
    <%= form.text_field :role, class: "input-default" %>
  </div>

  <div>
    <%= form.label :category, class: "label-default" %>
    <%= form.text_field :category, class: "input-default" %>
  </div>

  <div>
    <%= form.label :demo_type, class: "label-default" %>
    <%= form.text_field :demo_type, class: "input-default" %>
  </div>

  <div>
    <%= form.label :slug, class: "label-default" %>
    <%= form.text_field :slug, class: "input-default" %>
  </div>

  <div>
    <%= form.label :tech_stack, class: "label-default" %>
    <div class="flex flex-wrap gap-4 mt-2">
      <% Project::ALLOWED_TECH_STACK.each do |tech| %>
        <label class="flex items-center space-x-2">
          <%= check_box_tag "project[tech_stack][]", tech, project.tech_stack&.include?(tech), id: "project_tech_stack_#{tech.parameterize}", class: "h-5 w-5 text-blue-600 border-gray-300 rounded" %>
          <span class="text-sm text-gray-800"><%= tech %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.label :tags, class: "label-default" %>
    <%= form.text_field :tags_string, value: project.tags&.join(", "), class: "input-default", placeholder: "e.g. open source, featured, backend" %>
  </div>

  <div>
    <%= form.submit "Save", class: "w-full sm:w-auto rounded-md px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>
<% end %>
